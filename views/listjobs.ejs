<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>BOPPs</title>
</head>

<body class="container-fluid mt-4" style="background-color: rgb(230, 238, 246)">
    <!-- <img src="/images/stw-logo.png" height="40" width="100"></img> -->
    <img src="./images/stw-logo.png" height="80" width="200" class="rounded float-right" alt="STW">
    <h2 class="display-4" style="color: rgb(11, 86, 164)">Burst On Private Property</h2>

    <h3>Customer Permissions Received</h3>

    <table class="table table-sm table-hover table-responsive">
        <thead class="thead">
            <!-- <tr>  -->
            <div class="row">
                <!-- <th>Job No</th> -->
                <th>Name</th>
                <th>Address</th>
                <th>Telephone</th>
                <th>Owner Name</th>
                <!-- <th>Owner Address</th>
                    <th>Owner Telephone</th> -->
                <th>Date Received</th>
                <th>Done?</th>
                <th>Download</th>
                <!-- </tr> -->
        </thead>
        <tbody>
            <% recs.forEach(function(rec) { %>
            <tr>
                <!-- <div>
                    <td>
                        <%=rec.jobno%>
                    </td>
                </div> -->
                <td>
                    <%=rec.name%>
                </td>
                <td>
                    <%=rec.address%>
                </td>
                <td>
                    <%=rec.tel%>
                </td>
                <td title="<%=rec.owneraddress%>, <%=rec.ownertel%>">
                    <%=rec.ownername%>
                </td>
                <!-- <td>
                    <%=rec.owneraddress%>
                </td>
                <td>
                    <%=rec.ownertel%>
                </td> -->
                <td>
                    <%=rec.date.toLocaleDateString("en-GB")%>
                </td>
                <td>
                    <input type="checkbox"></input>
                </td>
                <td>
                    <!-- <input type="checkbox"></input> -->
                    <button class="btn-outline-info">
                        <img src="./images/download.png" height="20" width="15" class="rounded float-right" alt="STW">
                    </button>
                </td>
            </tr>
            <% }); %>
        </tbody>
    </table>

    <% if (envDBURL) { %>
    <h6>Envrionment DB URL:
        <%= envDBURL %>
    </h6>
    <% } %>
</body>


<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>

</html>