<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <title>BOPPS</title>
</head>

<body style="background-color: rgb(230, 238, 246)">

    <img src="/images/stw-logo.png" height="40" width="100"></img>

    <h1 style="color: blue">BOPPS</h1>
    <h2>Customer Permissions Received</h2>

    <table>
        <tr>
            <th>Job No</th>
            <th>Name</th>
            <th>Address</th>
            <th>Telephone</th>
            <th>Owner Name</th>
            <th>Owner Address</th>
            <th>Owner Telephone</th>
            <th>Actioned</th>
          </tr>
          <% recs.forEach(function(rec) { %>
          <tr>
            <td><%=rec.jobno%></td>
            <td><%=rec.name%></td>
            <td><%=rec.address%></td>
            <td><%=rec.tel%></td>
            <td><%=rec.ownername%></td>
            <td><%=rec.owneraddress%></td>
            <td><%=rec.ownertel%></td>
            <td><%=rec.date%></td>
            <td><%=rec.actioned%></td>
          </tr>
          <% }); %>
    </table>

</body>


<script src="/js/jquery.min.js"></script>
<script src="/js/bootstrap.min.js"></script>

</html>